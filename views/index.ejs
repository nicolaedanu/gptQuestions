<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ChatGPT Response Generator</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body class="container mt-5">
    <form action="/" method="post">
        <div class="form-group">
            <label for="message"><h3 class="mt-3">Interview question: </h3></label>
            <!-- Replace input with textarea -->
            <textarea class="form-control" id="message" name="message" rows="3" required></textarea>
        </div>
        <!-- New input field for context -->
        <!-- TODO -->
        <!-- <div class="form-group">
            <label for="context">Context:</label>
            <input type="text" class="form-control" id="context" name="context" placeholder="Add context to make the answers more personal.">
        </div> -->
        <button type="submit" class="btn btn-primary">
            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
            Generate response
        </button>
    </form>

    <% if (response !== undefined && message !== undefined) { %>
        <h3 class="mt-3">Question:</h3>
        <div class="alert alert-primary" role="alert">
            <%= message %>
        </div>
        <h3 class="mt-3">Response:</h3>
        <div class="alert alert-success" role="alert">
            <%= response %>
        </div>
    <% } %>
    
    <!-- Footer -->
    <footer class="mt-5 text-center">
        <small>Powered by <a href="https://prepfully.com/" target="_blank">Prepfully</a></small>
    </footer>

    <!-- Include Bootstrap JS and Popper.js -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.9/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Reset form fields on page load
            document.getElementById('message').value = '';
            document.getElementById('context').value = '';
        });
    </script> -->
    <script>
        // JavaScript to show/hide the Bootstrap loading spinner
        document.querySelector('form').addEventListener('submit', function () {
            const button = document.querySelector('button[type="submit"]');
            button.disabled = true; // Disable the button to prevent multiple submissions
            button.querySelector('.spinner-border').classList.remove('d-none');
        });
    </script>

</body>

</html>
